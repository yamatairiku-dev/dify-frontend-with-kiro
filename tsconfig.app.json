{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true, // Temporarily disabled for React Router v7 setup
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    // "noUnusedLocals": true, // Temporarily disabled for React Router v7 setup
    // "noUnusedParameters": true, // Temporarily disabled for React Router v7 setup
    // "erasableSyntaxOnly": true, // Temporarily disabled for React Router v7 setup
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Additional strict mode options */
    // "exactOptionalPropertyTypes": true, // Temporarily disabled for React Router v7 setup
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    /* Module interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "app"],
  "exclude": [
    "src/integration/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}
